<section class="cart py-16">
	<% if(session.cart){%>
	<div class="order container mx-auto w-1/2">
		<div class="flex items-center border-b border-red-500 pb-4">
			<img src="/img/cart-black.png" alt="">
			<h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
		</div>
		<div class="cloth-list">
			<% for(let my of Object.values(session.cart.items)){%>
			<div class="flex items-center my-8">
				<img class="w-24"src="/img/<%=my.item.image%>">
				<div class=" flex-1 ml-4">
					<h1><%=my.item.name%></h1>
					<span><%=my.item.size%></span>
				</div>
				<span class="flex-1"><%=my.qty%> Pcs</span>
				<span class="font-bold text-lg">₹<%=my.item.price*my.qty%></span>
			</div>
			<%}%>
		</div>
		<hr class="border-red-500">
		<div class="text-right py-4">
			<div>
				<span class="text-lg font-bold">Total Amount:</span>
				<span class="amount text-2xl font-bold ml-2">₹<%=session.cart.totalPrice%></span>
			</div>
			<%if(user){%>
			<div>
				<form action="/orders" method="POST" class="mt-12">
					<input class="border-b border-red-300 p-2 w-1/2 mb-4" type="text" placeholder="Phone number" name="phone">
					<input class="border-b border-red-300 p-2 w-1/2" type="text" placeholder="Address" name="address">
					<div>
						<button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6" type="submit">Order Now</button>
					</div>
				</form>
			</div>
			<% }else{%>
			<a href="/login" class="inline-block cursor-pointer px-6 btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Login to Continue</a>
			<%}%>
		</div>
	</div>
	<%}else{%>
<div class="empty-cart py-16">
	<div class="container mx-auto text-center">
		<h1 class="text-3xl font-bold mb-2">Cart Empty ☹️</h1>
		<p class="text-gray-500 text-lg mb-12">You Probably havent ordered cloth yet.</br>
		To Start Shopping,go to the main page</p>
		<img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="empty-cart">
		<a href="/" class="inline-block px-6 py-2 rounded-full btn-primary texrt-white font-bold mt-12">Go Back</a>
	</div>

</div> 
<%}%>
</section>